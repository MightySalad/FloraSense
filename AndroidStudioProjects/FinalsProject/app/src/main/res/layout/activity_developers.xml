<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E1E1E"
    tools:context=".Developers_Activity">

    <RelativeLayout
        android:id="@+id/developersBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@drawable/rounded_gray_background_upsidedown"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@id/developersText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/delius_swash_caps_regular"
            android:text="Developers"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"/>

        <ImageButton
            android:id="@+id/backImageButton"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/back_icon"/>

    </RelativeLayout>

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/developersBox"
        app:layout_constraintBottom_toTopOf="@id/navigationBar">

        <RelativeLayout
            android:id="@+id/horizontalScrollFeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <RelativeLayout
                android:id="@+id/firstDeveloper"
                android:layout_width="350dp"
                android:layout_height="650dp"
                android:background="@drawable/rounded_white_background"
                android:padding="10dp">

                <TextView
                    android:id="@+id/firstDeveloperRole"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Project Manager"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"/>

                <ImageView
                    android:id="@+id/firstDeveloperProfile"
                    android:layout_below="@id/firstDeveloperRole"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/pol"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/rounded_silver_background_for_developers"/>

                <TextView
                    android:id="@+id/firstDeveloperName"
                    android:layout_below="@id/firstDeveloperProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Paul Vincent T. Lepatan"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:id="@+id/firstDeveloperEmail"
                    android:layout_below="@id/firstDeveloperName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="lepatanpaul123@gmail.com"
                    android:textColor="#6A6A6A"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:id="@+id/polBio"
                    android:layout_below="@id/firstDeveloperEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="30dp"
                    android:text="Leading the team with technical expertise and a clear vision, I bridge the gap between frontend and backend development. By fostering collaboration, I ensure seamless, scalable solutions that deliver a cohesive user experience. I leverage my knowledge across both areas to streamline workflows, driving the team to build high-quality, reliable products that meet business and user needs."
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:justificationMode="inter_word"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:id="@+id/polFunFact"
                    android:layout_below="@id/polBio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="30dp"
                    android:text="Fun Fact: Enjoys solving complex problems and is a gaming fanatic!"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:justificationMode="inter_word"
                    android:layout_centerHorizontal="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/secondDeveloper"
                android:layout_toRightOf="@id/firstDeveloper"
                android:layout_width="350dp"
                android:layout_height="650dp"
                android:layout_marginStart="25dp"
                android:background="@drawable/rounded_white_background"
                android:padding="20dp">

                <TextView
                    android:id="@+id/secondDeveloperRole"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Backend Developer"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"/>

                <ImageView
                    android:id="@+id/secondDeveloperProfile"
                    android:layout_below="@id/secondDeveloperRole"
                    android:layout_marginTop="10dp"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/brix"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/rounded_silver_background_for_developers"/>

                <TextView
                    android:id="@+id/secondDeveloperName"
                    android:layout_below="@id/secondDeveloperProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Maverick Angelo I. Beltran"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:id="@+id/secondDeveloperEmail"
                    android:layout_below="@id/secondDeveloperName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="mavbriks@gmail.com"
                    android:textColor="#6A6A6A"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:id="@+id/brixBio"
                    android:layout_below="@id/secondDeveloperEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="30dp"
                    android:text="With expertise in server-side development, I focus on optimizing back-end systems for smooth application performance. I address performance bottlenecks and enhance server reliability. By implementing scalable solutions, I ensure efficient operation under high load. My goal is to deliver seamless user experiences with high-performance applications."
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:justificationMode="inter_word"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:id="@+id/brixFunFact"
                    android:layout_below="@id/brixBio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="30dp"
                    android:text="Fun Fact: Silent but deadly."
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:justificationMode="inter_word"
                    android:layout_centerHorizontal="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/thirdDeveloper"
                android:layout_toRightOf="@id/secondDeveloper"
                android:layout_width="350dp"
                android:layout_height="650dp"
                android:layout_marginStart="25dp"
                android:background="@drawable/rounded_white_background"
                android:padding="20dp">

                <TextView
                    android:id="@+id/thirdDeveloperRole"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Frontend Developer"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"/>

                <ImageView
                    android:id="@+id/thirdDeveloperProfile"
                    android:layout_below="@id/thirdDeveloperRole"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/krista"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/rounded_silver_background_for_developers"/>

                <TextView
                    android:id="@+id/thirdDeveloperName"
                    android:layout_below="@id/thirdDeveloperProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Kristabelle Ricsan P. Lapidez"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:id="@+id/thirdDeveloperEmail"
                    android:layout_below="@id/thirdDeveloperName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="lapidezkristabelle@gmail.com"
                    android:textColor="#6A6A6A"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:id="@+id/kristaBio"
                    android:layout_below="@id/thirdDeveloperEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="30dp"
                    android:text="Passionate about UI/UX design and frontend development, I focus on creating visually appealing and user-friendly web applications. I combine creativity with functionality to craft seamless, intuitive interfaces. By understanding user needs, I ensure designs enhance the overall experience. My goal is to bring dynamic and engaging web applications to life."
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:justificationMode="inter_word"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:id="@+id/kristaFunFact"
                    android:layout_below="@id/kristaBio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="30dp"
                    android:text="Fun Fact: Loves creating aesthetic UI designs and is a cat enthusiast!"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:justificationMode="inter_word"
                    android:layout_centerHorizontal="true"/>

            </RelativeLayout>
        </RelativeLayout>
    </HorizontalScrollView>

    <RelativeLayout
        android:id="@+id/navigationBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_gray_background"
        app:layout_constraintBottom_toBottomOf="@id/main"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:padding="10dp"
            android:weightSum="5"
            android:layout_centerInParent="true">

            <ImageButton
                android:id="@+id/homeImageButton"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:layout_margin="25dp"
                android:background="@drawable/home_icon"
                android:layout_gravity="center"/>

            <ImageButton
                android:id="@+id/exploreImageButton"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:layout_margin="25dp"
                android:background="@drawable/explore_icon"
                android:layout_gravity="center"/>

            <ImageButton
                android:id="@+id/journalImageButton"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:layout_margin="25dp"
                android:background="@drawable/journal_icon"
                android:layout_gravity="center"/>

            <ImageButton
                android:id="@+id/bookmarkImageButton"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:layout_margin="25dp"
                android:background="@drawable/bookmark_icon"
                android:layout_gravity="center"/>

            <ImageButton
                android:id="@+id/userImageButton"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:layout_margin="25dp"
                android:background="@drawable/user_icon"
                android:layout_gravity="center"/>
        </LinearLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>