<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E1E1E"
    tools:context=".Settings_Activity">

    <RelativeLayout
        android:id="@+id/settingsBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@drawable/rounded_gray_background_upsidedown"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/settingsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/delius_swash_caps_regular"
            android:text="Settings"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"/>

        <ImageButton
            android:id="@+id/backImageButton"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/back_icon"/>

    </RelativeLayout>

    <EditText
        android:id="@+id/searchBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/circular_edit_text"
        android:hint="Search..."
        android:textColorHint="@color/gray"
        android:textSize="15sp"
        android:paddingLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/settingsBox"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toBottomOf="@id/searchBar">

        <RelativeLayout
            android:id="@+id/scrollFeed"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/boxOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="20dp"
            android:background="@drawable/rounded_backdrop">

            <ImageView
                android:id="@+id/darkModeIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/dark_mode_icon"/>

            <TextView
                android:id="@+id/darkModeText"
                android:layout_toRightOf="@id/darkModeIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:text="Dark Mode"
                android:textColor="@color/white"
                android:textSize="15sp"/>

            <ImageView
                android:id="@+id/nextIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/next_icon_white"
                android:layout_alignParentRight="true"/>

            <ImageView
                android:id="@+id/notificationsIcon"
                android:layout_below="@+id/darkModeIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="50dp"
                android:src="@drawable/notification_icon"/>

            <TextView
                android:id="@+id/notificationsText"
                android:layout_toRightOf="@id/notificationsIcon"
                android:layout_below="@id/darkModeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginStart="40dp"
                android:text="Notifications and Sounds"
                android:textColor="@color/white"
                android:textSize="15sp"/>

            <ImageView
                android:id="@+id/nextIcon1"
                android:layout_below="@id/nextIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="50dp"
                android:src="@drawable/next_icon_white"
                android:layout_alignParentRight="true"/>

            <ImageView
                android:id="@+id/dataStorageIcon"
                android:layout_below="@+id/notificationsIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="50dp"
                android:src="@drawable/storage_icon"/>

            <TextView
                android:id="@+id/dataStorageText"
                android:layout_toRightOf="@id/dataStorageIcon"
                android:layout_below="@id/notificationsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginStart="40dp"
                android:text="Data and Storage"
                android:textColor="@color/white"
                android:textSize="15sp"/>

            <ImageView
                android:id="@+id/nextIcon2"
                android:layout_below="@id/nextIcon1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="50dp"
                android:src="@drawable/next_icon_white"
                android:layout_alignParentRight="true"/>

            <ImageView
                android:id="@+id/powerSavingIcon"
                android:layout_below="@+id/dataStorageIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="50dp"
                android:src="@drawable/power_saving_icon"/>

            <TextView
                android:id="@+id/powerSavingText"
                android:layout_toRightOf="@id/powerSavingIcon"
                android:layout_below="@id/dataStorageText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginStart="40dp"
                android:text="Power Saving"
                android:textColor="@color/white"
                android:textSize="15sp"/>

            <ImageView
                android:id="@+id/nextIcon3"
                android:layout_below="@id/nextIcon2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="50dp"
                android:src="@drawable/next_icon_white"
                android:layout_alignParentRight="true"/>

            <ImageView
                android:id="@+id/languageIcon"
                android:layout_below="@+id/powerSavingIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="50dp"
                android:src="@drawable/language_icon"/>

            <TextView
                android:id="@+id/languageText"
                android:layout_toRightOf="@id/languageIcon"
                android:layout_below="@id/powerSavingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginStart="40dp"
                android:text="Language"
                android:textColor="@color/white"
                android:textSize="15sp"/>

            <ImageView
                android:id="@+id/nextIcon4"
                android:layout_below="@id/nextIcon3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="50dp"
                android:src="@drawable/next_icon_white"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

            <TextView
                android:id="@+id/subscriptionsText"
                android:layout_below="@+id/boxOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Subscriptions"
                android:textColor="#70A654"
                android:textSize="20sp"
                android:layout_centerHorizontal="true"/>

        <RelativeLayout
            android:id="@+id/boxTwo"
            android:layout_below="@+id/subscriptionsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="20dp"
            android:background="@drawable/rounded_backdrop">

            <ImageView
                android:id="@+id/removeAdsIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/remove_ads_icon"/>

            <TextView
                android:id="@+id/removeAdsText"
                android:layout_toRightOf="@id/removeAdsIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:text="Remove Ads"
                android:textColor="@color/white"
                android:textSize="15sp"/>

            <ImageView
                android:id="@+id/nextIcon5"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/next_icon_white"
                android:layout_alignParentRight="true"/>

            <ImageView
                android:id="@+id/premiumIcon"
                android:layout_below="@id/removeAdsIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="50dp"
                android:src="@drawable/premium_icon"/>

            <TextView
                android:id="@+id/premiumText"
                android:layout_toRightOf="@id/premiumIcon"
                android:layout_below="@id/removeAdsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginStart="40dp"
                android:text="Buy Premium"
                android:textColor="@color/white"
                android:textSize="15sp"/>

            <ImageView
                android:id="@+id/nextIcon6"
                android:layout_below="@id/nextIcon5"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="50dp"
                android:src="@drawable/next_icon_white"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

            <TextView
                android:id="@+id/aboutAppText"
                android:layout_below="@+id/boxTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="About App"
                android:textColor="#70A654"
                android:textSize="20sp"
                android:layout_centerHorizontal="true"/>

            <RelativeLayout
                android:id="@+id/boxThree"
                android:layout_below="@+id/aboutAppText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="20dp"
                android:background="@drawable/rounded_backdrop">

                <ImageView
                    android:id="@+id/termsIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/terms_and_condition_icon"/>

                <TextView
                    android:id="@+id/termsText"
                    android:layout_toRightOf="@id/termsIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:text="Terms and Condition"
                    android:textColor="@color/white"
                    android:textSize="15sp"/>

                <ImageView
                    android:id="@+id/nextIcon7"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/next_icon_white"
                    android:layout_alignParentRight="true"/>

                <ImageView
                    android:id="@+id/developersIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="50dp"
                    android:src="@drawable/developer_icon"/>

                <TextView
                    android:id="@+id/developersText"
                    android:layout_toRightOf="@id/developersIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:layout_marginStart="40dp"
                    android:text="Developers"
                    android:textColor="@color/white"
                    android:textSize="15sp"/>

                <ImageButton
                    android:id="@+id/nextIcon8"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="50dp"
                    android:clickable="true"
                    android:background="@drawable/next_icon_white"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@id/boxThree"/>

        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/navigationBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_gray_background"
        app:layout_constraintBottom_toBottomOf="@id/main"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:padding="10dp"
            android:weightSum="5"
            android:layout_centerInParent="true">

            <ImageButton
                android:id="@+id/homeImageButton"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:layout_margin="25dp"
                android:background="@drawable/home_icon"
                android:layout_gravity="center"/>

            <ImageButton
                android:id="@+id/exploreImageButton"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:layout_margin="25dp"
                android:background="@drawable/explore_icon"
                android:layout_gravity="center"/>

            <ImageButton
                android:id="@+id/journalImageButton"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:layout_margin="25dp"
                android:background="@drawable/journal_icon"
                android:layout_gravity="center"/>

            <ImageButton
                android:id="@+id/bookmarkImageButton"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:layout_margin="25dp"
                android:background="@drawable/bookmark_icon"
                android:layout_gravity="center"/>

            <ImageButton
                android:id="@+id/userImageButton"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:layout_margin="25dp"
                android:background="@drawable/user_icon"
                android:layout_gravity="center"/>
        </LinearLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>